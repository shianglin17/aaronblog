# ===== 基本應用設定 =====
APP_NAME="Aaron Blog"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

# ===== 本地化設定 =====
APP_LOCALE=zh_TW
APP_FALLBACK_LOCALE=zh_TW
APP_TIMEZONE=Asia/Taipei

# ===== 安全設定 =====
BCRYPT_ROUNDS=12

# ===== 資料庫設定 =====
DB_CONNECTION=sqlite
# 生產環境使用 MySQL 時取消註解：
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=aaronblog
# DB_USERNAME=root
# DB_PASSWORD=

# ===== Session 與 Cookie 安全設定 =====
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
# 生產環境必須設定：
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# ===== Sanctum 認證設定 =====
# 允許 SPA 認證的域名（生產環境必須設定）
SANCTUM_STATEFUL_DOMAINS=localhost:8080,127.0.0.1:8080

# ===== CORS 安全設定 =====
# 允許跨域請求的來源域名（生產環境必須設定具體域名）
# CORS_ALLOWED_ORIGINS=https://aaronlei.com,https://www.aaronlei.com

# ===== 快取設定 =====
CACHE_STORE=redis
CACHE_PREFIX=aaronblog_cache_

# ===== Redis 設定 =====
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# ===== 其他設定 =====
LOG_CHANNEL=stack
LOG_LEVEL=debug
QUEUE_CONNECTION=database
FILESYSTEM_DISK=local

# ===== 郵件設定 =====
MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ===== 前端設定 =====
VITE_APP_NAME="${APP_NAME}"

# ===== 開發工具 =====
ENABLE_SQL_LOG=true

# ===== 邀請碼 =====
INVITE_CODE=your-invite-code-here
