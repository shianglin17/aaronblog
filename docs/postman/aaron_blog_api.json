{
  "info": {
    "name": "Aaron Blog API",
    "description": "Aaron 個人部落格 API 文檔集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "文章",
      "description": "文章相關的 API",
      "item": [
        {
          "name": "獲取文章列表",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text",
                "disabled": true
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/article/list",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "article",
                "list"
              ]
            },
            "description": "獲取文章列表"
          },
          "response": [
            {
              "name": "成功回應範例",
              "originalRequest": {
                "method": "GET",
                "url": {
                  "raw": "{{baseUrl}}/api/article/list?page=1&per_page=15"
                }
              },
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "json",
              "header": [],
              "cookie": [],
              "body": "{\n    \"status\": \"success\",\n    \"code\": 200,\n    \"message\": \"成功\",\n    \"data\": [\n        {\n            \"id\": 1,\n            \"title\": \"文章標題\",\n            \"content\": \"文章內容\",\n            \"created_at\": \"2024-03-20T12:00:00Z\",\n            \"updated_at\": \"2024-03-20T12:00:00Z\"\n        }\n    ],\n    \"meta\": {\n        \"pagination\": {\n            \"total\": 100,\n            \"per_page\": 15,\n            \"current_page\": 1,\n            \"last_page\": 7,\n            \"from\": 1,\n            \"to\": 15\n        }\n    }\n}"
            },
            {
              "name": "驗證錯誤回應範例",
              "originalRequest": {
                "method": "GET",
                "url": {
                  "raw": "{{baseUrl}}/api/article/list?page=0&per_page=15"
                }
              },
              "status": "Unprocessable Entity",
              "code": 422,
              "_postman_previewlanguage": "json",
              "header": [],
              "cookie": [],
              "body": "{\n    \"status\": \"error\",\n    \"code\": 422,\n    \"message\": \"驗證失敗\",\n    \"errors\": {\n        \"page\": [\"頁碼必須大於等於 1\"]\n    }\n}"
            }
          ]
        }
      ]
    },
    {
      "name": "認證",
      "description": "認證相關的 API",
      "item": [
        {
          "name": "登入",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData && jsonData.token) {",
                  "    pm.environment.set('token', jsonData.token);",
                  "    console.log('Token 已保存到環境變數');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "description": "管理員登入系統"
          }
        },
        {
          "name": "登出",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "logout"
              ]
            },
            "description": "管理員登出系統"
          }
        },
        {
          "name": "獲取用戶資訊",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/user",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "user"
              ]
            },
            "description": "獲取當前登入用戶的資訊"
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "adminEmail",
      "value": "admin@example.com",
      "type": "string"
    },
    {
      "key": "adminPassword",
      "value": "password",
      "type": "string"
    }
  ]
} 